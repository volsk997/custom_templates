ha-card {
      margin: {{top | default(0)}}px {{left | default(-7)}}px {{bottom | default(0)}}px;
      --chip-background: none;
      --chip-border-width: 0;
      --chip-box-shadow: none;
      --chip-border-radius: 12px;
      --chip-height: 40px;
      --chip-padding: 14px;
      --chip-spacing: -35px;
      --chip-icon-size: {{icon_size | default (30)}}px;
      --chip-font-size: {{font_size | default (25)}}px;
    }